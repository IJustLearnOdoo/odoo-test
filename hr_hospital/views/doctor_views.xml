<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.form</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="photo" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="gender"/>
                            <field name="specialization"/>
                            <field name="phone"/>
                            <field name="is_intern"/>
                            <field name="mentor_id" invisible="not is_intern"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Patients">
                            <field name="patient_ids"/>
                        </page>
                        <page string="Interns" invisible="is_intern">
                            <field name="intern_ids" widget="many2many_kanban">
                                <kanban>
                                    <field name="name"/>
                                    <field name="specialization"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <div class="oe_kanban_details">
                                                    <strong class="o_kanban_record_title">
                                                        <field name="name"/>
                                                    </strong>
                                                    <div>
                                                        <field name="specialization"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Mentor" invisible="not is_intern">
                            <group>
                                <field name="mentor_id" readonly="1"/>
                                <field name="specialization" readonly="1"/>
                                <field name="phone" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_doctor_tree" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.tree</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="specialization"/>
                <field name="phone"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
            </tree>
        </field>
    </record>

    <record id="view_doctor_search" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.search</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="specialization"/>
                <filter string="Mentors" name="mentors" domain="[('intern_ids', '!=', False)]"/>
                <filter string="Interns" name="interns" domain="[('is_intern', '=', True)]"/>
            </search>
        </field>
    </record>

    <record id="view_doctor_kanban" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.kanban</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban default_group_by="specialization">
                <field name="name"/>
                <field name="specialization"/>
                <field name="mentor_id"/>
                <field name="is_intern"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <i><field name="specialization"/></i>
                                </div>
                                <div t-if="record.mentor_id.raw_value" class="mentor-info">
                                    <strong>Mentor: </strong>
                                    <a name="action_open_mentor_form" type="object" class="o_form_uri">
                                        <field name="mentor_id"/>
                                    </a>
                                </div>
                                <div class="oe_kanban_bottom_right intern-toggle">
                                    <label for="is_intern" class="pe-2"><strong>Intern</strong></label>
                                    <field name="is_intern" widget="boolean_toggle"/>
                                </div>
                                <div class="text-muted">
                                    <button name="action_create_visit" type="object" class="btn btn-link">
                                        Schedule Visit
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hr_hospital.doctor</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>
